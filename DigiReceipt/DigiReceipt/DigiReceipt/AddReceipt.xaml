<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiReceipt.AddReceipt">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackLayout Orientation="Horizontal" Style="{StaticResource header}">
                <Label Text="DigiReceipt" Style="{StaticResource headerBranding}"/>
            </StackLayout>

            <!-- Content -->
            <StackLayout Grid.Row="1" Style="{StaticResource content}">
                <Button Text="Back" Clicked="OnBack"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>