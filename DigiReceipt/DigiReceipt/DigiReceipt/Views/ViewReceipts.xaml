<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiReceipt.ViewReceipts"
             Style="{StaticResource PageStyle}"
             Title="Receipts">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Icon="Icons/logout.png" Clicked="OnLogout"/>
        <ToolbarItem Text="Add Receipt" Icon="Icons/add.png" Clicked="OnAddReceipt"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Button Text="View Receipt" Clicked="OnViewReceipt"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>